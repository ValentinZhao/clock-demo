<view class="input-wrapper">
    <view class="username">
      <input type="number" maxlength="11" placeholder="手机号" bindinput="bindInputUser" id="signup_usr"/>
    </view>
    <view class="username" id="signup_code">
      <input type="number" placeholder="验证码" bindinput="bindVerifyCode" id="input_code"/>
      <button id="btn_getcode" bindtap="getVerifyCode" type="warn">获取验证码</button>
    </view>
    <view class="password">
      <input type="password" placeholder="设置登录密码" bindinput="bindInputPsw" id="signup_psw"/>
    </view>
</view>
<view class="signup_btn">
  <button class="btn_signup" type="primary" bindtap="userSignup">注册</button>
</view>